<tr id="<%= dom_id(giveaway_entry) %>" class="border-b border-gray-700 hover:bg-gray-750 transition-colors group">
  <td class="p-4 flex items-center space-x-3">
    <% if giveaway_entry.user.avatar.present? %>
      <img src="<%= giveaway_entry.user.avatar %>" class="w-8 h-8 rounded-full border border-gray-600 shadow-sm" alt="avatar">
    <% else %>
      <div class="w-8 h-8 rounded-full bg-indigo-600 flex items-center justify-center text-xs font-bold text-white uppercase">
      
      <%= giveaway_entry.user.username[0..1] %>
      </div>
    <% end %>
    <div>
      <div class="text-sm font-bold text-gray-100 group-hover:text-indigo-400 transition">
        <%= giveaway_entry.user.username %>
      </div>
      <div class="text-xs text-gray-500">
        UID: <%= giveaway_entry.user.uid %>
      </div>
    </div>
  </td>

  <td class="p-4 text-center">
    <span class="px-3 py-1 bg-gray-900 rounded text-indigo-400 font-mono font-bold border border-indigo-900/50">
      <%= giveaway_entry.tickets_count %>
    </span>
  </td>

  <%# NEW: Odds of Winning Column %>
  <td class="p-4">
    <% 
      total = giveaway_entry.giveaway.total_tickets
      odds = total > 0 ? (giveaway_entry.tickets_count.to_f / total * 100).round(1) : 0 
    %>
    <div class="flex flex-col w-24">
      <div class="flex justify-between items-center mb-1">
        <span class="text-xs font-bold text-indigo-300"><%= odds %>%</span>
        <span class="text-[10px] text-gray-500 uppercase italic">Odds</span>
      </div>
      <div class="w-full bg-gray-900 rounded-full h-1.5 border border-gray-700">
        <div class="bg-indigo-500 h-full rounded-full shadow-[0_0_8px_rgba(99,102,241,0.6)]" 
             style="width: <%= [odds, 100].min %>%"></div>
      </div>
    </div>
  </td>

  <td class="p-4 text-sm">
    <div class="flex flex-col space-y-1">
      <div class="flex items-center space-x-2">
        <span class="text-gray-500 text-xs uppercase tracking-tighter">Karma</span>
        <span class="<%= giveaway_entry.user.karma >= 100 ? 'text-green-400' : 'text-yellow-500' %> font-medium">
          <%= giveaway_entry.user.karma %>
        </span>
      </div>
      <div class="flex items-center space-x-2">
        <span class="text-gray-500 text-xs uppercase tracking-tighter">Fame</span>
        <span class="text-blue-400 font-medium"><%= giveaway_entry.user.fame %></span>
      </div>
    </div>
  </td>

  <td class="p-4 text-xs text-gray-400">
    <div class="flex flex-col">
      <span><%= giveaway_entry.created_at.strftime("%H:%M:%S") %></span>
      <span class="text-[10px] text-gray-600 tracking-tight"><%= time_ago_in_words(giveaway_entry.created_at) %> ago</span>
    </div>
  </td>
</tr>