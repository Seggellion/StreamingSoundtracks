<div class="w-64 bg-slate-900 text-white min-h-screen">
  <div class="p-6">
    <h1 class="text-2xl font-bold mb-6">Railpress Admin</h1>

    <nav class="space-y-1 text-sm">
      <%= link_to "Dashboard", admin_root_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <hr class="border-slate-700 my-3">
      <%= link_to "Pages", admin_pages_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>
          

      <%= link_to "Posts", admin_posts_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Events", admin_events_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Services", admin_services_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Testimonials", admin_testimonials_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Bingo Games", admin_bingo_games_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

<% if controller_name.include?('bingo') %>
  <div class="ml-4">
    <%= link_to "Bingo items", admin_bingo_items_path,
        class: "block px-4 py-1 rounded text-slate-300 hover:bg-slate-700" %>
  </div>
    <div class="ml-4">
    <%= link_to "Bingo cards", admin_bingo_cards_path,
        class: "block px-4 py-1 rounded text-slate-300 hover:bg-slate-700" %>
  </div>
      <div class="ml-4">
    <%= link_to "Monthly giveaway", monthly_giveaway_admin_bingo_games_path,
        class: "block px-4 py-1 rounded text-slate-300 hover:bg-slate-700" %>
  </div>
<% end %>

      <%= link_to "Coffer", admin_coffer_index_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

<% if controller_name.include?('coffer') || controller_name.include?('ticker') %>
  <div class="ml-4">
    <%= link_to "Investments", admin_tickers_path,
        class: "block px-4 py-1 rounded text-slate-300 hover:bg-slate-700" %>
  </div>

<% end %>

      <%= link_to "Commands", admin_custom_commands_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Giveaways", admin_giveaways_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <hr class="border-slate-700 my-3">

      <%= link_to "Menus", admin_menus_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Sections & Blocks", admin_sections_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Media Library", admin_media_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <% if current_page?(admin_media_path) %>
        <div class="ml-4">
          <%= link_to "Screenshots", screenshots_admin_media_path,
            class: "block px-4 py-1 rounded text-slate-300 hover:bg-slate-700" %>
        </div>
      <% end %>

      <hr class="border-slate-700 my-3">

      <%= link_to "Categories", admin_categories_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Tags", admin_tags_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Comments", admin_comments_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Downloads", admin_downloads_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <hr class="border-slate-700 my-3">

      <%= link_to "Users", admin_users_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <%= link_to "Settings", admin_settings_path,
        class: "block px-4 py-2 rounded hover:bg-slate-700" %>

      <% Setting.select(:group).distinct.where.not(group: nil).pluck(:group).each do |group| %>
        <%= link_to group.titleize,
          admin_settings_path(group: group),
          class: "ml-4 block px-3 py-1 text-xs text-slate-300 hover:text-white" %>
      <% end %>

      <hr class="border-slate-700 my-3">

      <%= button_to "Logout",
        logout_path,
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "w-full text-left px-4 py-2 rounded bg-red-600 hover:bg-red-700" %>
    </nav>
  </div>
</div>
