<!-- app/views/admin/users/edit.html.erb -->
<div class="container mx-auto my-8">
  <h1 class="text-2xl font-bold mb-6">Edit User</h1>

  <%= form_with model: [:admin, @user], local: true, data: { turbo: true } do |form| %>
    <div class="mb-4">
      <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :username, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="mb-4">
      <%= form.label :user_type, "Role", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :user_type, 
          User.user_types.keys.map { |type| [type.humanize, type] }, 
          {}, 
          { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } 
      %>
    </div>

    <div class="mb-4">
      <%= form.submit "Update User", class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
