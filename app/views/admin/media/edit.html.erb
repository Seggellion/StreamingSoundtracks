<h1>Edit Screenshot</h1>
<%= form_with(model: @media, url: admin_medium_path(@media), method: :patch, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :meta_description %><br>
    <%= form.text_area :meta_description, rows: 3 %>
  </div>

<div class="form-group">
  <%= form.label :shard_id, "Location", class: "form-label" %>
  <%= form.select :shard_id, options_from_collection_for_select(Shard.all, :id, :name, @media.shard_id), { include_blank: "Choose Shard" }, class: "form-select" %>
</div>

  <div class="form-group">
    <%= form.label :meta_keywords %><br>
    <%= form.text_area :meta_keywords, rows: 2 %>
  </div>

  <div class="form-group">
    <%= form.label :category %><br>
    <%= form.text_field :category %>
  </div>

  <div class="form-group">
    <%= form.check_box :approved %>
    <%= form.label :approved, "Approved?" %>
  </div>

  <div class="form-group">
    <%= form.check_box :screenshot_of_week %>
    <%= form.label :screenshot_of_week, "Screenshot of the Week?" %>
  </div>

  <%= form.submit "Save Changes", class: "btn btn-primary" %>
<% end %>


<style>
form .form-group {
  margin-bottom: 1rem;
}

form label {
  font-weight: bold;
}

form textarea, form input[type="text"] {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid #ccc;
  border-radius: 4px;
}

form .btn-primary {
  background-color: #0074D9;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

</style>