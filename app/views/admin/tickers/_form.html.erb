<%= form_with(model: [:admin, ticker], class: "space-y-6") do |f| %>
  <% if ticker.errors.any? %>
    <div class="bg-rose-900/50 border border-rose-500 text-rose-200 px-4 py-3 rounded-lg text-sm">
      <p class="font-bold mb-1"><%= pluralize(ticker.errors.count, "error") %> prohibited this ticker from saving:</p>
      <ul class="list-disc list-inside opacity-80">
        <% ticker.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4 md:col-span-2">
      <div>
        <%= f.label :name, "Name", class: "block text-xs font-bold uppercase text-slate-400 mb-1" %>
        <%= f.text_field :name, placeholder: "e.g. BINGO", class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition placeholder:text-slate-600" %>
      </div>

        <div>
        <%= f.label :symbol, "Ticker Symbol", class: "block text-xs font-bold uppercase text-slate-400 mb-1" %>
        <%= f.text_field :symbol, 
            placeholder: "BING", 
            maxlength: 4, 
            class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition placeholder:text-slate-600" %>
        </div>

      <div>
        <%= f.label :description, "Description", class: "block text-xs font-bold uppercase text-slate-400 mb-1" %>
        <%= f.rich_text_area :description, rows: 2, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
      </div>
    </div>

    <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 space-y-4">
      <h3 class="text-indigo-400 text-xs font-black uppercase tracking-widest border-b border-slate-700 pb-2">Valuation</h3>
      
      <div>
        <%= f.label :current_price, class: "block text-xs font-medium text-slate-500 mb-1" %>
        <div class="relative">
          <span class="absolute left-3 top-2 text-slate-500">$</span>
          <%= f.number_field :current_price, step: :any, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 pl-7 pr-3 text-white font-mono" %>
        </div>
      </div>

      <div>
        <%= f.label :previous_price, class: "block text-xs font-medium text-slate-500 mb-1" %>
        <div class="relative">
          <span class="absolute left-3 top-2 text-slate-500">$</span>
          <%= f.number_field :previous_price, step: :any, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 pl-7 pr-3 text-white font-mono opacity-60" %>
        </div>
      </div>
    </div>

    <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 space-y-4">
      <h3 class="text-indigo-400 text-xs font-black uppercase tracking-widest border-b border-slate-700 pb-2">Liquidity & Pressure</h3>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :liquidity, class: "block text-[10px] font-bold text-slate-500 uppercase" %>
          <%= f.number_field :liquidity, step: :any, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white font-mono" %>
        </div>
        <div>
          <%= f.label :max_liquidity, class: "block text-[10px] font-bold text-slate-500 uppercase" %>
          <%= f.number_field :max_liquidity, step: :any, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white font-mono" %>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :buy_pressure, class: "block text-[10px] font-bold text-emerald-500/80 uppercase" %>
          <%= f.number_field :buy_pressure, step: :any, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white font-mono" %>
        </div>
        <div>
          <%= f.label :sell_pressure, class: "block text-[10px] font-bold text-rose-500/80 uppercase" %>
          <%= f.number_field :sell_pressure, step: :any, class: "w-full bg-slate-900 border border-slate-700 rounded-lg py-2 px-3 text-white font-mono" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-end gap-4 pt-4 border-t border-slate-700">
    <%= link_to "Cancel", admin_tickers_path, class: "text-slate-400 hover:text-white transition text-sm font-medium" %>
    <%= f.submit ticker.new_record? ? "Initialize Ticker" : "Update Market Data", 
        class: "bg-indigo-600 hover:bg-indigo-500 text-white px-6 py-2.5 rounded-lg font-bold transition cursor-pointer shadow-lg shadow-indigo-500/20" %>
  </div>
<% end %>